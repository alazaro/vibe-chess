{
  "name": "chess",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "server": "tsx server.ts",
    "build:server": "tsc server.ts --outDir dist --esModuleInterop --resolveJsonModule --skipLibCheck",
    "start:server": "node dist/server.js",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm run server\""
  },
  "dependencies": {
    "chess.js": "^1.4.0",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-chessboard": "^5.7.1",
    "react-dom": "19.2.0",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/chess.js": "^0.13.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "socket.io": "^4.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
